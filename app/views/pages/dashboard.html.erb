<div class='navbar'>
    <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, alt: @user.first_name, class:'avatar'  %>
    <% else %>
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://i.pinimg.com/originals/51/f6/fb/51f6fb256629fc755b8870c801092942.png" />
    <% end %>
    <i class="fas fa-envelope"></i>
</div>

<div class='dashboard'>
    <div id='DateAvailability'>
        <h3> My availability </h3>
            <% if @user.availability == [] %>
                <p> no availability</p>
            <% else %>
            <div class='cards'>
                <%@arrayof5day.each do |date| %>
                     <% if @availabilitiesOfTheWeek.include?(date)%>
                         <div class='card-date'>
                            <div class='card-date-top'  style='background-color: #33CA7F'>
                                 <p> <%=date.strftime("%A")%> </p>
                            </div>
                             <div class='card-date-bottom' style='background-color: #33CA7F'>
                                <h3> <%=date.day%></h3>
                            </div>
                        </div>

                     <% else %>
                        <div class='card-date'>
                            <div class='card-date-top'  style='background-color: #FF686B'>
                                <p> <%=date.strftime("%A")%> </p>
                            </div>
                            <div class='card-date-bottom' style='background-color: #FF686B'>
                                <h3> <%=date.day%></h3>
                            </div>
                        </div>
                     <%end%>
                <% end %>
            </div>
            <%end%>
        <%= link_to new_availability_path do %>
            <i class="fas fa-plus-circle"></i>
        <%end%>
    </div>

    <div id='Appointements'>
        <h3> My Appointements </h3>
        <div class= 'cards'>
            <div class='card-date'>
                <div class='card-date-top'>
                </div>
                <div class='card-date-bottom'>
                </div>
            </div>

            <div class='card-date'>
