
  <div class='user_service_title'>
    <div style=' width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: blue;
    margin: 3px'>
    </div>
    <div class='title'>
        <strong><p style='font-size:14px'><%=@userService.user.first_name%>, <%=@userService.user.age%></p></strong>
        <p style='font-size:11px' >Cysoing</p>
    </div>
    <div class='notation'>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
  </div> 
  <div style='width: 70%; border-bottom: 2px solid white; margin: 0 auto'></div>

    <div class='description_userservice'>
      <p> <%=@userService.user.description%> <br />
      <br />
      <%=@userService.description%> 
      </p> 
    </div>
  <div class='review_userservice'>

 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <% @userService.reviews.each_with_index do |review, index|%> 
        <div class="carousel-item <%= 'active' if index == 0 %>">          
          <div class='carousel-header'>
            <div style=' width: 30px;
              height: 30px;
              border-radius: 50%;
              background-color: blue;
              margin: auto 3px'>
            </div>
            <div class='name_user-review'>
              <strong><p style='font-size:12px'><%=review.user.first_name%></p></strong>
            </div>
            <div class='notation'>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
          </div>
          <div class='carousel-content'>
            <p><i>"<%=review.content%></i>"</p>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

