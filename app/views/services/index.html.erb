


<div class='searchIdsService' >@
  <%= simple_form_for :formsearch, method: "get" do |f| %>
    <h3> What are you looking for ? </h3>
    <div class='SelectServiceToSearch'>
        <% @services.each do |service|  %>
                <h4 class='serviceIcon'data-id="<%= service.id %>" data-name="<%=service.name%>" style="width:25%; height:100px; color:white; margin: 0; text-align: center">
                <%= image_tag service.icon, alt: service.name, width: 100  %>
                </h4>
        <% end %>
    </div>
    <h3> When ? </h3>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :starts_time, :collection => @time %>
    <%= f.input :timing, as: :numeric %>

    <%= f.input :search, input_html: {class: "searchServiceInput hidden"}%>
    <%= submit_tag "Search", :name => nil, class: 'searchServicesubmit' %>
    <% end %>
</div>
